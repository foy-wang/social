{
    "gitbook": "3.x.x",
    "plugins": [  
    	"-search",
        "search-pro",
        "-lunr",
        "-highlight", 
        "-sharing", 
        "sharing-plus", 
        "tbfed-pagefooter", 
        "donate",
        "expandable-chapters",
        "emphasize",
        "github" 
    ],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "fontSettings": {
            "family": "serif",
            "size": 2
        },
        "github": {
            "url": "https://github.com/foywang"
        },
        "autotheme": {
            "white": [9, 10, 11, 12, 13, 14, 15, 16, 17],
            "sepia": [6, 7, 8, 18, 19],
            "night": [20, 21, 22, 23, 0, 1, 2, 3, 4, 5]
        },
  
        "sharing": {
            "douban": true,
            "facebook": false,
            "google": true,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": true,
            "linkedin": true,
            "messenger": false,
            "pocket": false,
            "qq": false,
            "qzone": true,
            "stumbleupon": false,
            "twitter": false,
            "viber": false,
            "vk": false,
            "weibo": true,
            "whatsapp": false,
            "all": [
                "facebook", "google", "twitter",
                "weibo", "instapaper", "linkedin",
                "pocket", "stumbleupon"
            ]
        },
        "tbfed-pagefooter": {
            "copyright": "Copyright &copy <a href='#' target='_blank'>王腾君</a> 2020",
            "modify_label": "最新修订：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "donate": {
            "wechat": "../weixin.png",
            "alipay": "../alipay.png",
            "title": "",
            "button": "赞助",
            "alipayText": "支付宝",
            "wechatText": "微信"
        }
    },
    "pdf": {
        "pageNumbers": true,
        "fontFamily": "sans",
        "fontSize": 21,
        "paperSize": "a4",
        "margin": {
            "right": 62,
            "left": 62,
            "top": 53,
            "bottom": 53
        }
    },
    "title": "黑色脑洞集",
    "description": "脑洞大开的故事集，有一些黑色思维在里头",
    "author": "王腾君",
    "language": "zh-hans",
    "root": ".",
    "structure": {
        "readme": "introduction.md"
    }
}
